;; this file tests the namespace functionality provided by Simba
;; can we namespace qualify symbols in the current namespace?
;; can we namespace qualify symbols in included namespaces?
;; is the base namespace included by default ?
;; multiple namespaces in a file?

;; (ns required)

;; (print hello)

(ns required)

(def a 30)

(ns namespaces-test)

(require required)
;; here the value of a depends on the order of the statements
(def a 20)

;; (print (py/abs -3))

(base/defn double [x] (* 2 x)) ;; base can be namespace/qualified

(print a);; preferentially returns local variables
(print required/a) ;; can properly access namespaced vars
(print namespaces-test/a) ;; but can also disambiguate

(print *ns*)
